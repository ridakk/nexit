{
  "name": "nexit",
  "version": "1.0.4",
  "description": "Tiny dependency free utility to exit NodeJs gracefully",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "cm": "git-cz",
    "release": "standard-version",
    "build": "./node_modules/.bin/tsc",
    "lint": "eslint 'src/*.ts'",
    "test": "./node_modules/.bin/jest --verbose --detectOpenHandles --forceExit --maxWorkers 2",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "coverage": "./node_modules/.bin/jest --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ridakk/nexit.git"
  },
  "author": "Kadir Goktas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ridakk/nexit/issues"
  },
  "keywords": [
    "graceful",
    "uncaught",
    "uncaughtException",
    "error",
    "graceful",
    "cluster",
    "graceful exit",
    "exit",
    "zero dependency"
  ],
  "homepage": "https://github.com/ridakk/nexit#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.7",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
